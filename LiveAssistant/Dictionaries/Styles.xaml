<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="FontIcon">
        <Setter Property="FontFamily" Value="/Assets/Fonts/Segoe Fluent Icons.ttf#Segoe Fluent Icons"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="Divider" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource DividerStrokeColorDefault}"/>
    </Style>

    <Style x:Key="VerticalDivider" TargetType="Border" BasedOn="{StaticResource Divider}">
        <Setter Property="Margin" Value="0 12"/>
    </Style>

    <Style x:Key="HorizontalDivider" TargetType="Border" BasedOn="{StaticResource Divider}">
        <Setter Property="Margin" Value="12 0"/>
    </Style>

    <Style x:Key="FlowListStyle" TargetType="ListView">
        <Setter Property="Padding" Value="0 6"/>
    </Style>

    <Style x:Key="FlowListItemStyle" TargetType="ListViewItem">
        <Setter Property="Padding" Value="12 6"/>
    </Style>
</ResourceDictionary>
